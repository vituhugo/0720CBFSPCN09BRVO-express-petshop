<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listagem Dono</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <%- include('../partials/header') %>
    <div class="container">
        <h1 class="mx-3"> Donos </h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Data Nascimento</th>
                    <th>Email</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                <% donos.forEach((item) => { %>
                <tr>
                    <td><%= item.nome %></td>
                    <td><%= item.data_nascimento %></td>
                    <td><%= item.email %></td>
                    <td>
                        <a href="/dono/<%= item.id %>/visualizar">Ver</a>
                        <span class="text-primary">|</span>
                        <a href="/dono/<%= item.id %>/editar">Editar</a>
                        <span class="text-primary">|</span>
                        <form action="/dono/<%= item.id %>/remover?_method=DELETE" method="POST" class="d-inline">
                            <button class="btn btn-link p-0">Deletar</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <p class="text-right">
            <a href="/dono/criar" class="btn btn-success">+ Adicionar</a>
        </p>
    </div>
</html>